<html>
{% include 'base.html.twig' %}
<script src="/js/addArticle.js"></script>

{% include 'navbar.html.twig' %}

{% block body %}
<div class="d-flex justify-content-center mt-5">
<div class="card mt-5">
  <div class="card-header">
    <h1>Ajouter article :</h1>
  </div>
  <ul class="list-group list-group-flush">
    <form  action="{{ path('app_addArticle') }}" method="post">       
        <li class="list-group-item"><input type="text" class="form-control" id="titre" name="titre" placeholder="Titre" required=""/></li>
        <li class="list-group-item"><input type="text" class="form-control" id="description" name="description" placeholder="Description" required=""/></li>
        <li class="list-group-item">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="Yes" name="cheakMedia" id="cheakMedia" onclick="cheak()">
            <label class="form-check-label" for="cheakMedia">
                Media ?
            </label>
            </div>
        </li>
        <li class="list-group-item"><button class="btn mt-2 btn-primary btn-block btn-lg" type="submit">Ajouter</button></li> 

    </form>
  </ul>
</div>
</div>



{% endblock %}